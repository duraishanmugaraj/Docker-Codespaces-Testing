{
  "name": "GitHub Codespaces - Ubuntu with AWS CLI",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y awscli && pip install snowflake-connector-python python-dotenv && docker pull apache/spark:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "amazonwebservices.aws-toolkit-vscode",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "akamud.vscode-theme-onedark",
        "github.codespaces",
        "ms-vscode-remote.remote-containers"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  }
}
